<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Request ATK</title>
</head>

<body class="p-3">
    <img src="/images/service/ATK.png" width="40px" alt="atk" style="border: 1px solid black; padding: 5px; border-radius: 10px;">
    <span class="m-lg-2 fs-4 fw-bold" style="vertical-align: middle;">Request ATK</span><br>
    <label for="req_by" class="mt-3">Requested By :</label>
    <input type="text" name="req_by" id="req_by" style="width: 220px; margin-bottom: 5px;" disabled><br>
    <label for="req_for">Requested For :</label>
    <select name="req_for" id="req_for" style="width: 215px;">
        <option selected disabled hidden>Pilih Requestee</option>
    </select>
    <form id="form-request" class="mt-3 d-flex flex-row gap-5 pt-3" style="border-top: 1px solid black;">
            <%- include('../partials/form_general_info.ejs') %>

            <div class="req-detail">
                <p class="mb-2" style="font-weight: bold;">Request Details</p>
                <div class="req-detail">
                    <label for="tgl_terima">Tanggal Pengambilan/Penerimaan</label><br>
                    <input type="date" name="tgl_terima" id="tgl_terima"><br>
                    <label for="lokasi_terima">Lokasi Penerimaan</label><br>
                    <input type="text" name="lokasi_terima" id="lokasi_terima" style="width: 270px;"><br>

                    <p class="mb-2 mt-4" style="font-weight: bold;">Item Details</p>
                    <label for="jenis_atk">Jenis Produk</label><br>
                    <select name="jenis_atk" id="jenis_atk" style="width: 250px;">
                        <option value='' selected disabled hidden>Pilih Jenis ATK</option>
                        <% jenis_atk.forEach(jenis=> { %>
                            <option>
                                <%= jenis %>
                            </option>
                            <% });%>
                                <option value="Lainnya">Lainnya</option>
                    </select><br>
                    <label for="nama_atk">Nama Produk</label><br>
                    <select name="nama_atk" id="nama_atk" style="width: 250px;">
                        <option value='' selected disabled hidden>Pilih Produk</option>
                    </select>
                    <input type="text" name="nama_atk_lainnya" id="nama_atk_lainnya" style="display: none;"><br>
                    <label for="jumlah">Jumlah Produk</label><br>
                    <input type="number" name="jumlah" id="jumlah" min="1" value="1"><br>
                    <label for="desc_atk">Deskripsi Produk</label><br>
                    <textarea name="desc_atk" id="desc_atk" cols="35" rows="2"></textarea><br>
                    <button type="button" id="add-item" class="btn btn-primary">Add Item</button>
                </div>
            </div>
            <div class="table-item">
                <p class="mb-2" style="font-weight: bold;">Item List</p>
                <table border="1" id="item" class="table table-striped table-bordered">
                    <tr>
                        <th>Nama Produk</th>
                        <th>Jenis Produk</th>
                        <th>Jumlah</th>
                        <th>Deskripsi Produk</th>
                        <th id="del_td"></th>
                    </tr>
                    <tbody id="item-list"></tbody>
                </table>
                <button type="submit" id="submit" class="btn btn-success">Submit Request</button>
            </div>
    </form>

    <script src="/scripts/atk/listAtk.js"></script>
    <script src="/scripts/atk/itemAtk.js"></script>
    <script src="/scripts/atk/requestAtk.js"></script>
    <script src="/scripts/cookiesGeneralInfo.js"></script>
</body>

</html>